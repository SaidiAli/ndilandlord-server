{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",
    "isolatedModules": true,
    "moduleResolution": "node",
    "allowJs": false,
    "declaration": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,  
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.d.ts"]
}

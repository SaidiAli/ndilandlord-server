# Payment Gateway Configuration
# Options: 'yo' (Yo! Payments - primary) or 'iotec' (IoTec - secondary)
PAYMENT_GATEWAY=iotec

# IoTec Gateway Configuration
# Used when PAYMENT_GATEWAY=iotec
IOTEC_CLIENT_ID=
IOTEC_CLIENT_SECRET=
IOTEC_WALLET_ID=
IOTEC_BASE_URL=https://pay.iotec.io/api
IOTEC_AUTH_URL=https://id.iotec.io/connect/token

# Yo! Payments Gateway Configuration
# Used when PAYMENT_GATEWAY=yo
YO_API_USERNAME=
YO_API_PASSWORD=
YO_API_URL=https://paymentsapi1.yo.co.ug/ybs/task.php
YO_SANDBOX_URL=https://sandbox.yo.co.ug/ybs/task.php
YO_USE_SANDBOX=true
# Webhook URLs (replace with your actual domain)
YO_IPN_URL=https://your-domain.com/api/payments/yo/ipn
YO_FAILURE_URL=https://your-domain.com/api/payments/yo/failure
# Path to Yo! public key for webhook signature verification (optional but recommended)
YO_PUBLIC_KEY_PATH=./keys/yo_public.pem
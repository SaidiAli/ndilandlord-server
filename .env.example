# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/wakka
REDIS_URL=redis-19186.c60.us-west-1-2.ec2.redns.redis-cloud.com:19186

# JWT Configuration
